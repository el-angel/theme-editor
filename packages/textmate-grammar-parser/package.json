{
  "name": "@anche/textmate-grammar-parser",
  "version": "0.0.0",
  "description": "TextMate Grammar Parser",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "keywords": [
    "textmate",
    "tmtheme",
    "grammar",
    "parser"
  ],
  "author": "Angelo Abdoelsamath <angelo.a@me.com>",
  "homepage": "https://github.com/el-angel/tmtheme-editor#readme",
  "license": "MIT",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "registry": "https://registry.yarnpkg.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/el-angel/tmtheme-editor.git"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "clean": "rimraf ./lib",
    "prebuild": "yarn clean",
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc --noEmit false --target ES2015 --module esnext --outDir ./esm",
    "build:cjs": "tsc --noEmit false",
    "prepack": "yarn build",
    "watch": "tsc --noEmit false -w --preserveWatchOutput",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx .",
    "precommit": "tsc --noEmit && lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pretty-quick --staged",
      "eslint --fix"
    ]
  },
  "bugs": {
    "url": "https://github.com/el-angel/tmtheme-editor/issues"
  },
  "dependencies": {
    "monaco-textmate": "^3.0.1",
    "onigasm": "^2.2.4"
  },
  "devDependencies": {
    "rimraf": "^3.0.2"
  }
}
